<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="108dp"
    android:height="108dp"
    android:viewportWidth="108"
    android:viewportHeight="108">

    <!-- This group centers and scales the entire sun graphic. -->
    <group
        android:translateX="54"
        android:translateY="54"
        android:scaleX="0.9"
        android:scaleY="0.9">

        <!-- Sun Body (Coordinates are relative to the group's center: 0,0) -->
        <path
            android:fillColor="#FFD54F"
            android:pathData="M21,0 A21,21 0 1,1 -21,0 A21,21 0 1,1 21,0" />

        <!-- Sun Rays (Coordinates are relative to the group's center: 0,0) -->
        <path android:strokeColor="#FFC107" android:strokeWidth="7" android:strokeLineCap="round" android:pathData="M0,-24 L0,-34" />
        <path android:strokeColor="#FFC107" android:strokeWidth="7" android:strokeLineCap="round" android:pathData="M17,-17 L24,-24" />
        <path android:strokeColor="#FFC107" android:strokeWidth="7" android:strokeLineCap="round" android:pathData="M24,0 L34,0" />
        <path android:strokeColor="#FFC107" android:strokeWidth="7" android:strokeLineCap="round" android:pathData="M17,17 L24,24" />
        <path android:strokeColor="#FFC107" android:strokeWidth="7" android:strokeLineCap="round" android:pathData="M0,24 L0,34" />
        <path android:strokeColor="#FFC107" android:strokeWidth="7" android:strokeLineCap="round" android:pathData="M-17,17 L-24,24" />
        <path android:strokeColor="#FFC107" android:strokeWidth="7" android:strokeLineCap="round" android:pathData="M-24,0 L-34,0" />
        <path android:strokeColor="#FFC107" android:strokeWidth="7" android:strokeLineCap="round" android:pathData="M-17,-17 L-24,-24" />

        <!-- Sun Face (Coordinates are relative to the group's center: 0,0) -->
        <!-- Eyes -->
        <path
            android:fillColor="#333"
            android:pathData="M-6,3 A2,2 0 1,1 -6.01,3 Z" />
        <path
            android:fillColor="#333"
            android:pathData="M6,3 A2,2 0 1,1 5.99,3 Z" />
        <!-- Mouth -->
        <path
            android:strokeColor="#333"
            android:strokeWidth="2"
            android:strokeLineCap="round"
            android:pathData="M-8,8 Q 0,16 8,8" />
    </group>
</vector>